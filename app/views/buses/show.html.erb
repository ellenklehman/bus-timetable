<div class="container">
  <div class="page-header">
    <h1>Buses <small>Number <%= @bus.number %>, <%= @bus.line.name %> Line</small></h1>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Bus Stops</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @bus.stops.each do |stop| %>
          <li><%= link_to "#{stop.station.name}", station_path(stop.station) %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <p><%= link_to "Update", edit_bus_path(@bus) %></p>
  <p><%= link_to "Delete", bus_path(@bus),
            :data => {:confirm => "You sure?", :method => "delete"} %></p>
</div>
